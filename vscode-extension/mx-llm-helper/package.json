{
  "name": "mx-llm-helper",
  "displayName": "mx-llm-helper",
  "description": "Chat-based LLM assistant for code understanding",
  "version": "0.0.9",
  "repository": {
    "type": "git",
    "url": "https://github.com/llm-2025/vscode-extension/mx-llm-helper"
  },
  "engines": {
    "vscode": "^1.97.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mx-llm-helper.helloWorld",
    "onCommand:mx-llm-helper.openChat",
    "onView:mx-llm-helper.chatView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mx-llm-helper.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "mx-llm-helper.openChat",
        "title": "Open LLM Chat"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mx-llm-helper-view",
          "title": "LLM Helper",
          "icon": "resources/chat-icon.svg"
        }
      ]
    },
    "views": {
      "mx-llm-helper-view": [
        {
          "type": "webview",
          "id": "mx-llm-helper.chatView",
          "name": "Chat"
        }
      ]
    }
  },
  "log": {
    "level": "debug",
    "output": "console"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "1.97.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "axios": "^1.9.0"
  }
}